<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account Portfolio</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/javascripts/loginWallet.js"></script>


</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4">Account Portfolio</h1>
    <div id="walletInfo">
      <% if (!success) { %>
        <button id="connect_wallet" class="btn btn-primary">Connect to Phantom Wallet</button>
      <% } else { %>
        <p>Public key: <%= message %></p>
      <% } %>
    </div>

    <% if (success) { %>

    <h2 class="mt-4">SOL Balance</h2>
    <p class="lead"><%= solBalance %> SOL</p>

    <h2 class="mt-4">Tokens</h2>
    <% if (numTokens > 0) { %>
    <ul class="list-group">
      <% tokens.forEach(token => { %>
      <li class="list-group-item">
        <%= token.name %>: <%= token.amount %>
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <p class="text-muted">No tokens available.</p>
    <% } %>

    <h2 class="mt-4">NFTs</h2>
    <% if (numNFTs > 0) { %>
    <ul class="list-group">
      <% nfts.forEach(nft => { %>
      <li class="list-group-item">
        <%= nft.name %>
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <p class="text-muted">No NFTs available.</p>
    <% } %>
    <% } %>
  </div>
</body>
</html>
