<!DOCTYPE html>
<html>
<head>
    <title><%= data.item.comic_name %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="mt-4 mb-4"><%= data.item.comic_name %></h1>
        <h1 class="mt-4 mb-4">Chapter <%= data.item.chapter_name %></h1>
        <div class="position-relative">
            <% if (data && data.item && data.item.chapter_image && data.item.chapter_image.length > 0) { %>
                <% data.item.chapter_image.forEach(function(image) { %>
                    <div class="col-md-8">
                        <div class="card mb-4 shadow-sm">
                            <img src="<%= data.domain_cdn %>/<%= data.item.chapter_path %>/<%= image.image_file %>" class="card-img-top" alt="Image <%= image.image_page %>">
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>Không có hình ảnh để hiển thị.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
